<h1>Boards</h1>

<div class="ui card">
  <div class="content">
    <p class="header">
      <%= @board.name %>
    </p>
  </div>

<div class="extra content">
<%= link_to "Delete #{@board.name}?", @board, method: :delete%><br/>
<%= link_to "Update #{@board.name}?", edit_board_path(@board)%><br/>
<%= link_to "New List", new_board_list_path(@board)%><br/>
<br/>
<% @board.lists.each do |list|%>
  <p><%= link_to "#{list.name}", board_list_path(@board,list) %></p>
  <%= link_to "Add Task", new_list_task_path(list)%>
<% end %>
  </div>
</div>